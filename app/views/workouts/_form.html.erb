<%= form_for(@workout) do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--"class" added to name field to remove confusion with instructor name.   -->
  <div class="field"><strong>Class</strong>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field hidden">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.time_select :time %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, [ 'Yoga','Swimming','Weight Training', 'Cross Fit', 'Cardio'], :prompt => 'Select One' %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.select :duration, [ '30 Minutes','60 Minutes', '90 Minutes', '2+ Hours'], :prompt => 'Select One' %>
  </div>
  <div class="field">
    <%= f.label :level %><br>
    <%= f.select :level, [ 'Beginner','Intermediate','Advanced'], :prompt => 'Select One' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
