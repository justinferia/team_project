<p id="notice"><%= notice %></p>

<h1>Workout Listings</h1>


<br>
<div class="container">
  <div id="calendar"></div>
</div>

<div id="fullCalModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span> <span class="sr-only">close</span></button>
                <h4 id="modalTitle" class="modal-title"></h4>
            </div>
            <strong class="modal_style">Instructor:</strong>
            <div id="instructor" class="modal-body">
            </div>
            <%= image_tag current_user.image.url, class: "img-responsive img-circle" %> 
            <strong class="modal_style">Description:</strong>
            <div id="description" class="modal-body">
            </div>
            <strong class="modal_style">Date:</strong>
            <div id="date" class="modal-body">
            </div>
            <strong class="modal_style">Time:</strong>
            <div id="time" class="modal-body">
            </div>
            <strong class="modal_style">Location:</strong>
            <div id="location" class="modal-body">
            </div>
            <strong class="modal_style">Category:</strong>
            <div id="category" class="modal-body">
            </div>
            <strong class="modal_style">Price:</strong>
            <div id="price" class="modal-body">
            </div>
            <strong class="modal_style">Duration:</strong>
            <div id="duration" class="modal-body">
            </div>
            <strong class="modal_style">Level:</strong>
            <div id="level" class="modal-body">
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <a class="btn btn-primary" id="eventUrl" target="_blank">Event Page</a>
            </div>
        </div>
    </div>
</div>

<%if !current_user.nil?%>
  <% if current_user.has_role? :instructor %>
    <%= link_to 'New Workout', new_workout_path %>
  <% end %>
<% end %>
