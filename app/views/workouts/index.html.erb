<p id="notice"><%= notice %></p>

<div class="container">

  <h1 class="top huge_name center">Workout Listings</h1>

  <div id="new">
    <%if !current_user.nil?%>
    <% if current_user.has_role? :instructor %>
    <%= link_to 'New Workout', new_workout_path, id: 'new_workout' %>
    <% end %>
    <% end %>
  </div>

  <br>
  <br>
  <div id="calendar"></div>

  <div id="fullCalModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span> <span class="sr-only">close</span></button>
          <h4 id="modalTitle" class="modal-title"></h4>
        </div>
        <div class="container modal-body">
          <div class="row">
            <div class="col-xs-3">

              <strong class="octin">Instructor</strong><p><a id="instructor"></a></p>
              <strong class="octin">Date: </strong><p id="date" ></p>
              <strong class="octin">Time: </strong><p id="time"></p>
              <strong class="octin">Location: </strong><p id="location"></p>
              <strong class="octin">Duration: </strong><p id="duration"></p>
              <strong class="octin">Class Description</strong><p id="description"></p>
            </div>
            <div class="col-xs-3">
              <div class="image-responsive">
                <img id="image">
              </div>
            </div>
            <div class="col-xs-3"></div>
            <div class="col-xs-3"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<br>
<form class="navbar-form navbar-left" action='/workouts/' method='get' role="search">
  <div class="form-group">
    <select class="form-control" name="search1">
      <option value="">Select Category</option>
      <option value="Yoga">Yoga</option>
      <option value="Swimming">Swimming</option>
      <option value="Weight Training">Weight Training</option>
      <option value="Cross Fit">Cross Fit</option>
      <option value="Cardio">Cardio</option>
    </select>
    <select class="form-control" name="search2">
      <option value="">Select Level</option>
      <option value="Beginner">Beginner</option>
      <option value="Intermediate">Intermediate</option>
      <option value="Advanced">Advanced</option>
    </select>
    <select class="form-control" name="search3">
      <option value="">Select Instructor</option>
      <% @users.each do |user| %>
      <% if user.has_role? :instructor %>
      <option value="<%=user.id%>"><%=user.first_name%> <%=user.last_name%></option>
      <% end %>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-default" id="searchbutton"><span class="glyphicon glyphicon-search"></span></button>
</form>
<br>
<p id="category-search" hidden><%=params[:search1]%></p>
<p id="level-search" hidden><%=params[:search2]%></p>
<p id="instructor-search" hidden><%=params[:search3]%></p>
<br>
<br>
<ul>
  <% if !params[:search1].nil? %>
  <% if !params[:search1].empty? %>
  <li><h5><%=params[:search1]%></h5></li>
  <% end %>
  <% end %>
  <% if !params[:search2].nil? %>
  <% if !params[:search2].empty? %>
  <li><h5><%=params[:search2]%></h5></li>
  <% end %>
  <% end %>
  <% if !params[:search3].nil? %>
  <% if !params[:search3].empty? %>
  <li><h5><%=@users.find(params[:search3]).first_name%>    <%=@users.find(params[:search3]).last_name%></h5></li>
  <% end %>
  <% end %>
</ul>
