
<div class="space-30"></div>
<div class="row">
  <div class="col-md-6 center">
    <div id="map">Google map will appear here...</div>
    <script type="text/javascript">
    handler = Gmaps.build('Google', { markers: { maxRandomDistance: 20 } });
    handler.buildMap({
      provider: {},
      internal: {id: 'map'}
    },
    function() {
      markers = handler.addMarkers(<%=raw @pindrop.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap();
      if(navigator.geolocation)
      navigator.geolocation.getCurrentPosition(displayOnMap);
    }
  );
  function displayOnMap(position){
    var marker = handler.addMarker({
      lat: position.coords.latitude,
      lng: position.coords.longitude

    });
    var image = '<%= asset_path 'person_icon.png' %>';
    marker.serviceObject.icon = image;
    handler.map.centerOn(marker);
  };
  </script>
  </div>
  <div class="col-md-6 text-center">
    <div class="space-32"></div>
    <div class="space-32"></div>
    <div class="space-20"></div>
    <p class="huge_name varsity">Welcome to <br> Winners Circle</p>
    <br>
    <div class="biggest">
      Let's find a workout just for you!
    </div>
    <div class="bigger">
      <br>
      Please sign in as Guest to RSVP for events
      <br>
      Please sign in as Instructor to host an event
    </div>
    <br>
    <a href="/workouts" type="button" class="btn btn-success white">Calendar of Events</a>
  </div>
</div>
